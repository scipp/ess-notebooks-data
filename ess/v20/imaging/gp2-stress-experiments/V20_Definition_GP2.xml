<?xml version="1.0" encoding="UTF-8"?>
<!-- For help on the notation used to specify an Instrument Definition File
see http://www.mantidproject.org/IDF -->
<instrument xmlns="http://www.mantidproject.org/IDF/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mantidproject.org/IDF/1.0 Schema/IDFSchema.xsd"
name="V20" valid-from ="1900-01-31 23:59:59"
valid-to ="2099-12-31 23:59:59"
last-modified="2018-02-09 09:00:00">
  <defaults>
    <length unit="meter"/>
    <angle unit="degree"/>
    <reference-frame>
      <!-- The z-axis is set parallel to and in the direction of the beam. the
           y-axis points up and the coordinate system is right handed. -->
      <along-beam axis="z"/>
      <pointing-up axis="y"/>
      <handedness val="right"/>
    </reference-frame>
    <default-view axis-view="z"/>
  </defaults>
  
  <component type="source-chopper">
    <location x="0.0" y="0.0" z="-25.3"/>
  </component>
  <type name="source-chopper"/>

  <component type="wfm-chopper">
    <location x="0.0" y="0.0" z="-18.45"/>
  </component>
  <type name="wfm-chopper" is="Source" />

  <component type="some-sample-holder">
    <location x="0.0" y="0.0" z="0.3185"/>
  </component>
  <type name="some-sample-holder" is="SamplePos" />
      <!-- All values meaning also the beam monitor position are given ablsolute BUT can be 
			overruled by MoveInstrumentComponent in a script run by Mantid. -->  

  <!-- The center of the beam monitor is the position of the beam monitor. -->    
  <component name="GP2" type="panel"  idstart="0" idfillbyfirst="x" idstepbyrow="324">
    <location x="0" y="0" z="0.6005" name="location_GP2">
    </location>
  </component>

  <!-- Rectangular Detector Panel. 324 "pixel" along x from -0.011340 m to -0.011340 m
  and 200 "pixel" along y from -0.2 to 0.2 (relative to the coordinate system of the bank) -->     
  <type name="panel" is="RectangularDetector" type="pixel"
    xpixels="324" xstart="-0.011305" xstep="+7e-5"
    ypixels="324" ystart="-0.011305" ystep="+7e-5" >
  </type>
  
  <!-- defining pixel shape, origin is in the center of a pixel.
  Following the convention of TOPAZ with regard to the handedness of the
  coordinate system. -->
  <type name="pixel" is="detector"> 
    <cuboid id="shape">
      <!-- left-front-bottom-point. -->    
      <left-front-bottom-point x="-3.5e-5" y="-3.5e-5" z="0.0"  />
      <!-- left-back-bottom-point. -->    
      <left-front-top-point  x="-3.5e-5" y="+3.5e-5" z="0.0"  />
      <!-- right-front-bottom-point. -->    
      <left-back-bottom-point  x="-3.5e-5" y="-3.5e-5" z="-1e-7"  />
      <!-- right-front-top-point. -->    
      <right-front-bottom-point  x="+3.5e-5" y="-3.5e-5" z="0.0"  />
    </cuboid>
  </type>

  <idlist idname="monitor-id-list">
    <id val="1" />
  </idlist>

</instrument>
